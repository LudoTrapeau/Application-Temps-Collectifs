<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_creation_temps_coll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.g_concept.tempscollectifs.VuesPrincipales.CreationTempsColl"
    android:background="#636262">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="left|center_vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Création du temps collectif"
                android:textColor="#10bed3"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnInfo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/info" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right">

                <Button
                    android:id="@+id/fabButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/home"
                    android:clickable="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/fenetretempscoll"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

                <LinearLayout
                    android:id="@+id/llDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal|center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="530dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/encadrecreationtempscoll"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/edDate"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_vertical"
                            android:ems="10"
                            android:enabled="false"
                            android:inputType="date"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/editText"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/textView2"
                            android:layout_gravity="center_vertical|center_vertical"
                            android:layout_marginLeft="15dp"
                            android:padding="5dp"
                            android:text="Date temps collectif : "
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvNbDates"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Vous n'avez pas sélectionné de date"
                                        android:textColor="@android:color/background_dark" />
                                </LinearLayout>

                                <ImageButton
                                    android:id="@+id/ibDate"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="30dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/calendar2"
                                    android:scaleType="matrix" />

                                <ImageView
                                    android:id="@+id/ibDelete"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="10dp"
                                    app:srcCompat="@drawable/delete3" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llEncadre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal|center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="530dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/encadrecreationtempscoll"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <TextView
                            android:id="@+id/tvDatesListe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ListView
                            android:id="@+id/listviewDates"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llHeures"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="530dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="260dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical|center_vertical"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/encadrecreationtempscoll"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/editText2"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="false"
                                    android:layout_alignTop="@+id/ibHeureFin"
                                    android:layout_gravity="center_vertical|center_vertical"
                                    android:layout_marginLeft="15dp"
                                    android:padding="5dp"
                                    android:text="Heure début\n(HH-MM-SS) :"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/edHeureDebut"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:ems="10"
                                    android:enabled="false"
                                    android:inputType="time" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="20dp"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <ImageButton
                                        android:id="@+id/ibHeureDeb"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/time" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="260dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="250dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|center_vertical"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/encadrecreationtempscoll"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/editText3"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="false"
                                    android:layout_alignTop="@+id/ibHeureFin"
                                    android:layout_gravity="center_vertical|center_vertical"
                                    android:padding="5dp"
                                    android:text="Heure fin \n(HH-MM-SS)"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/edHeureFin"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:elevation="0dp"
                                    android:enabled="false"
                                    android:inputType="time" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="20dp"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <ImageButton
                                        android:id="@+id/ibHeureFin"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/time" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical|center_vertical"
                        android:background="@drawable/encadrecreationtempscoll"
                        android:weightSum="1"
                        android:layout_height="50dp"
                        android:layout_width="530dp">

                        <TextView
                            android:id="@+id/tvNom"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_vertical"
                            android:layout_marginLeft="15dp"
                            android:padding="5dp"
                            android:text="Nom du temps collectif :"
                            android:textColor="@android:color/background_dark"
                            android:textSize="15sp"
                            android:textStyle="normal|bold" />

                        <Spinner
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_vertical"
                            android:id="@+id/spNom"
                            android:layout_width="200dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical">

                            <ImageButton
                                android:id="@+id/ibAdd"
                                android:background="@drawable/add2"
                                android:scaleType="matrix"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="30dp" />

                            <Button
                                android:id="@+id/btnRefresh"
                                android:background="@drawable/reload"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="20dp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical|center_vertical"
                        android:background="@drawable/encadrecreationtempscoll"
                        android:layout_height="50dp"
                        android:layout_width="530dp">

                        <TextView
                            android:text="Activité :"
                            android:layout_gravity="center_vertical|center_vertical"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvActivite"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_width="190dp"
                            android:textSize="15sp"
                            android:layout_marginLeft="15dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Spinner
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_vertical"
                                android:id="@+id/spActivite"
                                android:layout_width="200dp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="right|center_vertical">

                                <ImageView
                                    app:srcCompat="@drawable/add2"
                                    android:id="@+id/ivAddActivite"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="30dp" />

                                <Button
                                    android:id="@+id/btnRefresh3"
                                    android:background="@drawable/reload"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="20dp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:weightSum="1"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical|center_vertical"
                        android:background="@drawable/encadrecreationtempscoll"
                        android:layout_height="40dp"
                        android:layout_width="530dp">

                        <TextView
                            android:text="Type :"
                            android:layout_gravity="center_vertical|center_vertical"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_width="190dp"
                            android:textSize="15sp"
                            android:layout_marginLeft="15dp" />

                        <Spinner
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_vertical"
                            android:id="@+id/spCategorie"
                            android:layout_width="200dp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical|center_vertical"
                        android:background="@drawable/encadrecreationtempscoll"
                        android:weightSum="1"
                        android:layout_height="50dp"
                        android:layout_width="530dp">

                        <TextView
                            android:text="RAM :"
                            android:layout_gravity="center_vertical|center_vertical"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvRAM"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_width="190dp"
                            android:textSize="15sp"
                            android:layout_marginLeft="15dp" />

                        <Spinner
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_vertical"
                            android:id="@+id/spinnerRAM"
                            android:layout_width="200dp" />

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="@drawable/encadrecreationtempscoll"
                        android:weightSum="1"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="530dp">

                        <TextView
                            android:id="@+id/tvLieu"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_vertical"
                            android:layout_marginLeft="15dp"
                            android:padding="5dp"
                            android:text="Lieu :"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <Spinner
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_vertical"
                        android:id="@+id/spinnerLieu"
                            android:layout_width="200dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivAddLieu"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="30dp"
                                app:srcCompat="@drawable/add2" />

                            <Button
                                android:id="@+id/btnRefresh2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/reload"
                                android:gravity="center_horizontal" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:weightSum="1"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical|center_vertical"
                        android:background="@drawable/encadrecreationtempscoll"
                        android:weightSum="1"
                        android:layout_height="50dp"
                        android:layout_width="530dp">

                        <TextView
                            android:text="Nb places enfant :"
                            android:layout_gravity="center_vertical|center_vertical"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvNbPlacesEnfant"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="135dp" />

                        <TextView
                            android:layout_gravity="center_vertical|center_vertical"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvNbEnf"
                            android:padding="5dp"
                            android:textColor="@android:color/black"
                            android:layout_width="50dp" />

                        <SeekBar
                            android:id="@+id/simpleSeekBar"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:layout_marginTop="15dp"
                            android:layout_width="220dp" />

                        <Switch
                            android:text="Indéfini"
                            android:layout_height="wrap_content"
                            android:id="@+id/swIndefini"
                            android:layout_width="100dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp" />

                    </LinearLayout>

                </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:weightSum="1"
            android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical|center_vertical"
                    android:background="@drawable/encadrecreationtempscoll"
                    android:weightSum="1"
                    android:layout_height="50dp"
                    android:layout_width="530dp">

                    <TextView
                        android:text="Nb places adulte :"
                        android:layout_gravity="center_vertical|center_vertical"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvNbPlacesAdulte"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="135dp" />

                    <TextView
                        android:layout_gravity="center_vertical|center_vertical"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvNbAdultes"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:layout_width="50dp" />

                    <SeekBar
                        android:id="@+id/simpleSeekBar2"
                        android:layout_height="wrap_content"
                        android:max="100"
                        android:layout_marginTop="15dp"
                        android:layout_width="220dp" />

                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:weightSum="1"
                    android:gravity="center">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical|center_vertical"
                        android:background="@drawable/encadrecreationtempscoll"
                        android:layout_height="50dp"
                        android:layout_width="530dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_width="170dp"
                            android:layout_marginLeft="15dp">

                            <TextView
                                android:text="Détails public :"
                                android:layout_gravity="center_vertical|center_vertical"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvDetailsPublic"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:layout_width="190dp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/nbLimitChar"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:text="0 " />

                                <TextView
                                    android:text="/"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:id="@+id/textView25"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:text="255"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView19"
                                    android:textStyle="bold"
                                    android:layout_weight="1"
                                    android:textColor="@android:color/black"
                                    android:layout_marginLeft="3dp" />
                            </LinearLayout>

                        </LinearLayout>

                        <EditText
                            android:layout_height="match_parent"
                            android:maxLength="255"
                            android:inputType="textMultiLine"
                            android:id="@+id/edDetailsPublic"
                            android:layout_width="250dp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:weightSum="1"
                    android:id="@+id/llDetaitRAM">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical|center_vertical"
                        android:background="@drawable/encadrecreationtempscoll"
                        android:layout_height="50dp"
                        android:layout_width="530dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_width="170dp"
                            android:layout_marginLeft="15dp">

                            <TextView
                                android:text="Détails RAM :"
                                android:layout_gravity="center_vertical|center_vertical"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvDetailsRAM"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"
                                android:layout_width="wrap_content"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
